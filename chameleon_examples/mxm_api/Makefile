.PHONY: clean default debug simulate-work run trace run-mpi-debug run-paper-experiments

# Program flags
FILE_NAMES ?= mxm_api.cpp
PROGRAM ?= mxm_api
ITERATIVE_VERSION ?= 1
NUM_ITERATIONS ?= 2
NUM_REPETITIONS ?= 1
PARALLEL_INIT ?= 1
COMPILE_CHAMELEON ?= 1
COMPILE_TASKING ?= 1
USE_REPLICATION ?= 0
USE_EXTERNAL_CALLBACK ?= 0

# Compile flags
CH_OMP_FLAGS=-qopenmp -qno-openmp-offload
APP_COMPILE_FLAGS = -std=c++11 $(CH_OMP_FLAGS) -DITERATIVE_VERSION=${ITERATIVE_VERSION} -DNUM_ITERATIONS=${NUM_ITERATIONS} -DPARALLEL_INIT=${PARALLEL_INIT} -DCOMPILE_CHAMELEON=${COMPILE_CHAMELEON} -DCOMPILE_TASKING=${COMPILE_TASKING} -DNUM_REPETITIONS=${NUM_REPETITIONS} -DUSE_REPLICATION=${USE_REPLICATION} -DUSE_EXTERNAL_CALLBACK=${USE_EXTERNAL_CALLBACK}
APP_LINKER_FLAGS = -lm -lstdc++
FLAGS_OPTIMIZATION = -g -O3

ifeq (${COMPILE_CHAMELEON}, 1)
APP_LINKER_FLAGS += -lchameleon
endif

# Runing parameters
NUM_TASKS ?= $(shell echo $$(( $(OMP_NUM_THREADS) * 100 )))
RUN_SETTINGS = OMP_PLACES=cores OMP_PROC_BIND=close I_MPI_PIN=1 I_MPI_PIN_DOMAIN=auto I_MPI_FABRICS="shm:tmi" I_MPI_DEBUG=5 KMP_AFFINITY=verbose
RUN_SETTINGS_SLURM = OMP_PLACES=cores OMP_PROC_BIND=close I_MPI_FABRICS="shm:tmi" I_MPI_DEBUG=5 KMP_AFFINITY=verbose

# Compile modes
default: release

release: FLAGS_OPTIMIZATION=-g -O3
release: generic

debug: FLAGS_OPTIMIZATION=-g -O0
debug: generic

simulate-work: FLAGS_OPTIMIZATION=-g -O3 -DSIMULATE_CONST_WORK=1 -DCALC_SPEEDUP=0
simulate-work: generic

generic: clean
	${MPICXX}  $(FLAGS_OPTIMIZATION) -o $(PROGRAM) $(APP_COMPILE_FLAGS) $(FILE_NAMES) $(APP_LINKER_FLAGS)

run:
	$(RUN_SETTINGS) mpirun -np 4 -genvall ./$(PROGRAM) $(MATRIX_SIZE) 70 50 30 20

clean:
	rm -f $(PROG) *.o