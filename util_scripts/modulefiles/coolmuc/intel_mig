module-whatis "Name: intel_mig"
module-whatis "Version: 1.0"
module-whatis "Category: ~/.modules"
module-whatis "Description: A migration version of the task-based Chameleon lib"

set CHAMELEON_HOME  ~/chameleon/install/intel_mig

prepend-path    LD_LIBRARY_PATH     ${CHAMELEON_HOME}/lib
prepend-path    LIBRARY_PATH        ${CHAMELEON_HOME}/lib
prepend-path    INCLUDE             ${CHAMELEON_HOME}/include
prepend-path    CPATH               ${CHAMELEON_HOME}/include